<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/contactItemRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/contactNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/myBlack"
            android:textSize="23dp"
            android:textStyle="bold"
            tools:text="Essadeq Elaamiri" />

        <TextView
            android:id="@+id/contactEmailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactNameTextView"
            android:drawableStart="@drawable/ic_baseline_email_15"
            android:drawablePadding="6dp"
            android:textColor="@color/material_dynamic_neutral30"
            android:textSize="18dp"
            tools:text="essadeq@gmail.com" />

        <TextView
            android:id="@+id/contactPhoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactEmailTextView"
            android:drawableStart="@drawable/ic_baseline_local_phone_15"
            android:drawablePadding="6dp"
            android:textColor="@color/material_dynamic_neutral30"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="00 88 99 98" />

        <TextView
            android:id="@+id/contactTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactEmailTextView"
            android:layout_alignParentRight="true"
            android:textColor="@color/material_dynamic_neutral30"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="FAMILY" />


    </RelativeLayout>

</RelativeLayout>